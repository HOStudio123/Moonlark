<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.2.0/mdb.min.css" rel="stylesheet" />
    <script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.2.0/mdb.umd.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
    <nav id="nav"></nav>
    <br>
    <div class="container">
        <div class="row">
            <div class="col-8">
                <div class="card">
                    <div class="card-header">
                        {{ title }}
                    </div>
                    <div class="card-body">
                        <ul>
                            <li>{{ username }}</li>
                            <li>{{ uid }}</li>
                            <li>
                                {{ level }}
                                <ul><li>
                                    {{ total_exp }}
                                </li></ul>
                            </li>
                            <li>{{ vimcoin }}</li>
                            <li>{{ fav }}</li>
                            <li>{{ hp }}</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="card">
                    <div class="card-header">
                        {{ time }}
                    </div>
                    <div class="card-body">
                        <ul>
                            <li>{{ gsc_time }}</li>
                            <li>{{ earth_time }}</li>
                        </ul>
                    </div>
                </div>
                <br>
                <div class="card">
                    <div class="card-header">
                        {{ i18n }}
                    </div>
                    <div class="card-body">
                        {{ current_lang }}
                        <select class="form-select" onchange="location.href=`/api/set_language?language=${this.options[this.selectedIndex].value}`">
                            {% for lang in lang_list %}
                                {% if lang.selected %}
                                    <option selected>{{ lang.name }}</option>
                                {% else %}
                                    <option>{{ lang.name }}</option>
                                {% endif %}
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <br>
                <div class="card">
                    <div class="card-header">
                        {{ registry }}
                    </div>
                    <div class="card-body">
                        <ul>
                            <li>{{ activate_time }}</li>
                            <li>{{ registry_time }}</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/script/navbar.js"></script>
</body>

</html>