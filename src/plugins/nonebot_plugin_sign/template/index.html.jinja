<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <!-- MDB -->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.2.0/mdb.min.css" rel="stylesheet" />
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.2.0/mdb.umd.min.js"></script>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <style>
            body {
                background-image: url('https://www.dmoe.cc/random.php');
                
                background-position: center;
                background-repeat: no-repeat;
                background-size: cover;
                padding: 20px;
                padding-bottom: 0px;
            }
            .text-style {
                color: white;
                text-shadow: 0px 0px 4px black;
            }

        </style>
    </head>
    <body>
        <div class="container">
            <h1 class="text-center text-style">{{ title }}</h1>
            <div class="card shadow bg-light bg-opacity-75">
                <div class="card-body">
                    <p>
                        <span class="h2">{{ nickname }}</span>
                        {{ uid }}
                    </p>
                    <div class="row">
                        <div class="col">
                            <h3>{{ exp.text }}</h3>
                            <p>{{ exp.origin }} -> {{ exp.now }} (<strong>+{{ exp.add }}</strong>)</p>
                            <h3>{{ vim.text }}</h3>
                            <p>{{ vim.origin }} -> {{ vim.now }} (<strong>+{{ vim.add }}</strong>)</p>
                            <h3>{{ fav.text }}</h3>
                            <p>{{ fav.origin }} -> {{ fav.now }} (<strong>+{{ fav.add }}</strong>)</p>
                        </div>
                        <div class="col">
                            <h3>{{ signdays.text }}</h3>
                            <p>{{ signdays.value }}</p>
                            <h3>{{ rank.text }}</h3>
                            <p>{{ rank.value }}</p>
                            <h3>{{ fortune.text }}</h3>
                            <p>{{ fortune.value }}</p>
                        </div>
                    </div>
                    <div style="text-align: center;">
                        {{ hitokoto }}
                    </div>

                </div>
            </div>
            <p class="text-center">
                {{ footer }}
            </p>
        </div>
    </body>
</html>
