<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.2.0/mdb.min.css" rel="stylesheet" />
    <script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.2.0/mdb.umd.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
    <nav id="nav"></nav>
    <br>
    <div class="container">
        <div class="card">
            <div class="card-header">
                {{ title }}
            </div>
            <div class="card-body">
                <form action="/api/create_email" method="get">
                    <div class="mb-3 mt-3">
                        <label for="subject" class="form-label">{{ subject }}</label>
                        <input type="text" class="form-control" id="subject" placeholder="{{ subject_input }}" name="subject">
                    </div>
                    <div class="mb-3 mt-3">
                        <label for="content" class="form-label">{{ content }}</label>
                        <textarea class="form-control" id="content" placeholder="{{ content_input }}" name="content" rows="10"></textarea>
                    </div>
                    <div class="mb-3 mt-3">
                        <label for="receivers" class="form-label">{{ receiver }}</label>
                        <input type="text" class="form-control" id="receivers" placeholder="" name="receivers" value="all">
                        <div id="receiversHelp" class="form-text">{{ receiver_help }}</div>
                    </div>
                    <div class="mb-3 mt-3">
                        <label for="sender" class="form-label">{{ sender }}</label>
                        <input type="text" class="form-control" id="sender" placeholder="{{ sender_input }}" name="sender" value="Moonlark-Dev">
                    </div>
                    <div class="mb-3 mt-3">
                        <label for="items" class="form-label">{{ items }}</label>
                        <textarea class="form-control" id="items" placeholder="{{ items_input }}" name="items" rows="5"></textarea>
                        <div id="itemsHelp" class="form-text">{{ items_help }}</strong></div>
                    </div>
                    <button type="submit" class="btn btn-primary">{{ submit }}</button>
                </form>
            </div>
        </div>
    </div>
    <script src="/script/navbar.js"></script>
</body>

</html>