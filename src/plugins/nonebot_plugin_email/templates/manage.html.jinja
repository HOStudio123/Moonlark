<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.2.0/mdb.min.css" rel="stylesheet" />
    <script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.2.0/mdb.umd.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
    <nav id="nav"></nav>
    <br>
    <div class="container">
        <div class="card">
            <div class="card-header">
                {{ title }}
            </div>
            <div class="card-body">
                <p>{{ info }}</p>
                <table class="table-responsive table table-striped table-hover">
                    <thead>
                        <tr>
                            <td>{{ thead.id }}</td>
                            <td>{{ thead.subject }}</td>
                            <td>{{ thead.sender }}</td>
                            <td>{{ thead.receivers }}</td>
                            <td>{{ thead.time }}</td>
                            <td>{{ thead.items }}</td>
                            <td>{{ thead.control }}</td>
                        </tr>
                    </thead>
                    <tbody>
                        {% for email in emails %}
                            <tr>
                                <td>{{ email.id }}</td>
                                <td>{{ email.subject }}</td>
                                <td>{{ email.author }}</td>
                                <td>{{ email.receivers }}</td>
                                <td>{{ email.time }}</td>
                                <td>{{ email.items }}</td>
                                <td>
                                    <a href="/admin/email/{{ email.id }}/edit">{{ action.edit }}</a> Â· 
                                    <a href="/admin/email/{{ email.id }}/remove">{{ action.remove }}</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                {{ page_list_text }}
                {% for i in page_list %}
                    <a href="/admin/email/manage?page={{ i }}">{{ i }}</a> 
                {% endfor %}
            </div>
        </div>
    </div>
    <script src="/script/navbar.js"></script>
</body>

</html>
