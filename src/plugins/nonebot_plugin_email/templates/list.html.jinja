<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <!-- MDB -->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.2.0/mdb.min.css" rel="stylesheet" />
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.2.0/mdb.umd.min.js"></script>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <style>
            body {
                background-image: url('https://www.dmoe.cc/random.php');
                
                background-position: center;
                background-repeat: no-repeat;
                background-size: cover;
                padding: 20px;
                padding-bottom: 0px;
            }
            .text-style {
                color: white;
                text-shadow: 0px 0px 4px black;
            }

        </style>
    </head>
    <body>
        <div class="container">
            <h1 class="text-center text-style">{{ title }}</h1>
            <div class="card shadow bg-light bg-opacity-75">
                <div class="card-body">
                    {% for email in email_list %}
                        <span class="h3">{{ email.subject }}</span>
                        <br>
                        <small>
                            <ul>
                                <li>{{ email.time }}</li>
                                <li>{{ email.from }}</li>
                                <li>{{ email.id }}</li>
                            </ul>
                        </small>
                        <p>{{ email.content }}</p>
                        {% if email.items %}
                            <span class="h5">{{ item }}</span>
                            <ol>
                                {% for item in email.item_list %}
                                    <li>{{ item.name }} <span class="badge bg-info rounded-pill">{{ item.count }}</span></li>
                                {% endfor %}
                            </ol>
                        {% endif %}
                        {% if not loop.last %}
                            <hr>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
            <p class="text-center">{{ footer }}</p>
        </div>
    </body>
</html>
