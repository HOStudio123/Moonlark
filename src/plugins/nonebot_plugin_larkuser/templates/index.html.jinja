<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <!-- MDB -->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.2.0/mdb.min.css" rel="stylesheet" />
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.2.0/mdb.umd.min.js"></script>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <style>
            body {
                background-image: url('https://www.dmoe.cc/random.php');
                
                background-position: center;
                background-repeat: no-repeat;
                background-size: cover;
                padding: 20px;
                padding-bottom: 0px;
            }
            .text-style {
                color: white;
                text-shadow: 0px 0px 4px black;
            }

        </style>
    </head>
    <body>
        <div class="container">
            <h1 class="text-center text-style">{{ title }}</h1>
            <div class="card shadow bg-light bg-opacity-75">
                <div class="card-body">
                    <h3>{{ nickname }}</h3>
                    <p>{{ user_id }}</p>
                    <div class="row">
                        {% if avatar %}
                        <div class="col">
                            <img src="data:image;base64,{{ avatar }}" class="rounded-circle" width="100%">
                        </div>
                        {% endif %}
                        <div class="col">
                            {{ level }}<br>
                            <div class="progress" style="height:16px">
                                <div class="progress-bar" style="width:{{ level_progress }}">
                                </div>
                            </div>
                            {{ vimcoin }}<br>
                            {{ fav }}<br>
                            {{ hp }}
                            <div class="progress" style="height:16px">
                                <div class="progress-bar bg-danger" style="width:{{hp_progress}}">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <p class="text-center">{{ footer }}</p>
        </div>
    </body>
</html>
