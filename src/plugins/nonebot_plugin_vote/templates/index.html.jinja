<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <!-- MDB -->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.2.0/mdb.min.css" rel="stylesheet" />
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.2.0/mdb.umd.min.js"></script>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <style>
            body {
                background-image: url('https://www.dmoe.cc/random.php');
                
                background-position: center;
                background-repeat: no-repeat;
                background-size: cover;
                padding: 20px;
                padding-bottom: 0px;
            }
            .text-style {
                color: white;
                text-shadow: 0px 0px 4px black;
                
            }

        </style>
    </head>
    <body>
        <div class="container">
            <h1 class="text-center text-style">{{ page_title }}</h1>
            <div class="card shadow bg-light bg-opacity-75">
                <div class="card-body">
                    <span class="h3">{{ title }}</span>
                    {% if open %}
                        <span class="badge bg-success rounded-pill text-light">{{ status.open }}</span>
                    {% else %}
                        <span class="badge bg-danger rounded-pill text-light">{{ status.closed }}</span>
                    {% endif %}
                    <span class="badge bg-light rounded-pill text-dark">{{ id }}</span>
                    <p></p>
                    <p>{{ content }}</p>
                    <h4>{{ choice_text }}</h4>
                    <ol>
                        {% for choice in choices%}
                            <li style="margin: 5px;">
                                {{ choice.text }}
                                <span class="badge rounded-pill bg-info">{{ choice.count }}</span>
                                <div class="progress" style="height:20px; width:90%; margin-top: 2px; margin-bottom: 7px;">
                                    <div class="progress-bar bg-primary" style="width:{{ choice.percent }}%">
                                        {{ choice.percent }}%
                                    </div>
                                </div>
                            </li>
                        {% endfor %}
                    </ol>
                    <span class="badge bg-warning">{{ sponsor }}</span>
                    <span class="badge bg-dark text-light">{{ end_time }}</span>
                </div>
            </div>
            <p class="text-center">{{ footer }}</p>
        </div>
    </body>
</html>
